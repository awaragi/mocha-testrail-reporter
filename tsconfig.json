{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "pretty": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}